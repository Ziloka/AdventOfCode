{
  "cmake.configureOnOpen": false,
  "terminal.integrated.profiles.windows":{
    "Python virtualenv": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": [
        "-NoExit", "-File", "${workspaceFolder}\\init.ps1"
      ]
    },
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  "terminal.integrated.defaultProfile.windows": "Python virtualenv",
  "python.REPL.enableREPLSmartSend": false,
  "python.defaultInterpreterPath": "python"
}